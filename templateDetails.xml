					<option value="0">TPL_NATURE_FAVICON_TEMPLATE</option>
					<option value="1">TPL_NATURE_FAVICON_OWN</option>
				</field>

				<field
					name="noteFavicon"
					type="note"
					label="TPL_NATURE_FAVICON_NOTE_TEXT"
					heading="p"
					class="alert alert-warning"
